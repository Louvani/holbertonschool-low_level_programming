CC = gcc
SRC = main.c holberton.c
OBJ =  $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic
VAR1 = CFLAGS
VAR2 := $($(VAR1))

.PHONY: clean oclean fclean re all
all : $(OBJ) m.h
	$(CC) $(VAR2) $(SRC) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: oclean clean
re: oclean all
