CC = gcc
SRC = main.c holberton.c
OBJ =  $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic
# VAR1 = CFLAGS
# VAR2 := $($(VAR1))

.PHONY: all clean oclean fclean re

all : $(OBJ) m.h
	$(CC) $(SRC) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: oclean clean
re: oclean all
